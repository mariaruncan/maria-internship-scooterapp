<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Move" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/indigo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_purple</item>
        <item name="colorSecondaryVariant">@color/pastel_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="accent_color">@color/pink</item>
        <item name="background_color_dark">@color/purple</item>
        <item name="text_color_light">@color/white</item>
        <item name="text_color_secondary">@color/pastel_purple</item>
        <item name="text_color_dark">@color/indigo</item>
        <item name="box_stoke_color">@color/text_input_box_stroke_color</item>
        <item name="hint_color">@color/white</item>
        <item name="hint_color_foreground">@color/pastel_purple</item>
        <item name="icon_tint">@color/pastel_purple</item>
