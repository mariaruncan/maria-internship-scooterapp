<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_background_image"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="@dimen/scooter_image_width"
        android:layout_height="@dimen/scooter_image_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/scooter_image_margin_start"
        android:src="@drawable/scooter_image"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/move_logo"
        tools:ignore="ContentDescription" />
</FrameLayout>
