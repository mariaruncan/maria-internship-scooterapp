<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_authentication"
    android:orientation="vertical"
    android:padding="@dimen/large_margin_size">

    <ImageView
        android:id="@+id/previewPictureIV"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:layout_marginVertical="@dimen/large_margin_size"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/statusTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_checked" />

    <TextView
        android:id="@+id/statusTV"
        style="@style/Heading1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/large_margin_size"
        android:text="@string/driving_license_verify_status"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.internship.move.ui.widgets.LoadingButton
        android:id="@+id/findScootersBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/large_margin_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="@string/driving_license_find_scooters_btn_text" />
</androidx.constraintlayout.widget.ConstraintLayout>