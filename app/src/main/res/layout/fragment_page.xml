<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.onboarding.PageFragment">

    <ImageView
        android:id="@+id/backgroundIV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:src="@drawable/bg_first_onboarding_page" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleTV"
            style="@style/Heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indigo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/descriptionTV"
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/indigo"
            app:layout_constraintTop_toBottomOf="@id/titleTV"
            tools:text="Please wear a helmet and protect yourself while riding" />

        <TextView
            android:id="@+id/skipTV"
            style="@style/Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_label_text"
            app:layout_constraintBottom_toBottomOf="@id/titleTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nextBtn"
            style="@style/Button1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/ic_rectangle"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:text="@string/next_label_text"
            android:textColor="@color/white"
            app:backgroundTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>