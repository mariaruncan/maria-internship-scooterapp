<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
    </style>

    <style name="Heading1" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_bold</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
    </style>

    <style name="Heading2" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_medium</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>

    <style name="Heading3" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_semibold</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
    </style>

    <style name="Heading4" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="Heading5" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_bold</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
    </style>

    <style name="Button1" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="Button2" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_medium</item>
        <item name="android:textSize">@dimen/button2_text_size</item>
    </style>

    <style name="Caption1" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_semibold</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="Caption2" parent="TextAppearance">
        <item name="android:textSize">@dimen/caption_text_size</item>
    </style>

    <style name="Body1" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="Body2" parent="TextAppearance">
        <item name="android:fontFamily">@font/bai_jamjuree_medium</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
    </style>

    <style name="SmallText" parent="TextAppearance">
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance">
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="endIconTint">@color/icon_tint</item>
        <item name="hintTextColor">@color/hint_color_foreground</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/pink</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextInputLayout.Digit" parent="TextInputLayout">
        <item name="boxBackgroundColor">@color/text_input_bg_color</item>
        <item name="boxCornerRadiusTopStart">@dimen/small_margin_size</item>
        <item name="boxCornerRadiusTopEnd">@dimen/small_margin_size</item>
        <item name="boxCornerRadiusBottomStart">@dimen/small_margin_size</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/small_margin_size</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@color/transparent</item>
    </style>
</resources>